{
  "dockerComposeFile": "../docker-compose.yml",
  "service": "vscode",
  "runServices": [
    "vscode"
  ],
  "containerEnv": {
    "CLAUDE_CONFIG_DIR": "/root/.claude"
  },
  "mounts": [
    "source=${localEnv:HOME}/.claude,target=/root/.claude,type=bind"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "rubyLsp.useBundler": true,
        "rubyLsp.bundleGemfile": "Gemfile",
        "rubyLsp.additionalArgs": [
          "--use-launcher"
        ],
        "rubyLsp.enabledFeatures": {
          "definitions": true,
          "documentHighlights": true,
          "documentSymbols": true,
          "hover": true,
          "rails": true
        }
      },
      "extensions": [
        "aki77.rails-db-schema",
        "eskimoblood.create-test",
        "fabiospampinato.vscode-highlight",
        "aliariff.auto-add-brackets",
        "github.copilot",
        "github.copilot-chat",
        "github.vscode-github-actions",
        "github.vscode-pull-request-github",
        "gurgeous.bust-a-gem",
        "jamitech.simply-blame",
        "karunamurti.haml",
        "mechatroner.rainbow-csv",
        "mhutchie.git-graph",
        "mickey.code-copy-ruby-ref",
        "ms-vscode-remote.remote-containers",
        "ms-vscode-remote.remote-ssh",
        "ms-vscode-remote.remote-ssh-edit",
        "ms-vscode.remote-explorer",
        "ninoseki.vscode-mogami",
        "orepor.color-tabs-vscode-ext",
        "reliutg.bulma-css-class-completion",
        "shanehofstetter.rails-open-partial",
        "shopify.ruby-lsp",
        "tavo.rails-schema",
        "wmaurer.change-case",
        "aki77.rails-routes",
        "jemmyw.rails-fast-nav",
        "dbaeumer.vscode-eslint",
        "pavlitsky.yard",
        "ctf0.macros",
        "IBM.output-colorizer",
        "Gruntfuggly.todo-tree",
        "IgorSbitnev.error-gutters",
        "MS-vsliveshare.vsliveshare",
        "coderabbit.coderabbit-vscode",
        "sevenc-nanashi.gemfile-lock-highlight",
        "formulahendry.auto-rename-tag",
        "Fooo.ruby-spec-runner"
      ]
    }
  },
  "initializeCommand": "mkdir -p \"$HOME/.claude\" && security find-generic-password -s \"Claude Code-credentials\" -w > \"$HOME/.claude/.credentials.json\" || echo 1",
  "postCreateCommand": "bundle install && yarn install && ln -sf /usr/local/bundle /\"$APP_PATH\"/.gems",
  "name": "ForkLock",
  "workspaceFolder": "/ForkLock"
}
